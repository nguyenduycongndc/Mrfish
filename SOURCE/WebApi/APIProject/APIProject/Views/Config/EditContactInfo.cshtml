@using Data.Utils
@using Data.Model.APIWeb
@model ListContactInfoNewModel

<div class="modal fade" id="ModalEditContactInfo" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">

            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel"><i class="fa fa-fw fa-shopping-cart"></i>Sửa hạng</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>

            <div class="modal-body">
                <form id="form_update_config" name="form_update_config">
                    @{
                        if (Model.KeyPub.Equals("Zalo"))
                        {
                            <div class="row m-3">
                                <label class="text-dark">Kênh liên hệ:</label>&nbsp;
                                <a>@Model.KeyPub</a>
                            </div>
                            <div class="row m-3">
                                <label class="text-dark">Thông tin liên hệ</label>
                                <input type="text" class="form-control" id="txtTextContactInfoZalo" placeholder="Nhập thông tin liên hệ" value="@Model.TextContactInfoZalo" />
                            </div>
                            @*<div class="row m-3">
                                <label class="text-dark">Mô tả</label>
                                <textarea type="text" class="form-control" id="txtTextDescriptionContactInfoZalo">@Model.TextDescriptionContactInfoZalo</textarea>
                            </div>*@

                        }
                        else if (Model.KeyPub.Equals("Messager"))
                        {
                            <div class="row m-3">
                                <label class="text-dark">Kênh liên hệ:</label>&nbsp;
                                <a>@Model.KeyPub</a>
                            </div>
                            <div class="row m-3">
                                <label class="text-dark">Thông tin liên hệ</label>
                                <input type="text" class="form-control" id="txtTextContactInfoMess" placeholder="Nhập thông tin liên hệ" value="@Model.TextContactInfoMess" />
                            </div>
                            @*<div class="row m-3">
                                <label class="text-dark">Mô tả</label>
                                <textarea type="text" class="form-control" id="txtTextDescriptionContactInfoMess">@Model.TextDescriptionContactInfoMess</textarea>
                            </div>*@
                        }
                        else if (Model.KeyPub.Equals("Hotline"))
                        {
                            <div class="row m-3">
                                <label class="text-dark">Kênh liên hệ:</label>&nbsp;
                                <a>@Model.KeyPub</a>
                            </div>
                            <div class="row m-3">
                                <label class="text-dark">Thông tin liên hệ</label>
                                <input type="text" class="form-control" id="txtTextContactInfoHotline" placeholder="Nhập thông tin liên hệ" value="@Model.TextContactInfoHotline" />
                            </div>
                            @*<div class="row m-3">
                                <label class="text-dark">Mô tả</label>
                                <textarea type="text" class="form-control" id="txtTextDescriptionContactInfoHotline">@Model.TextDescriptionContactInfoHotline</textarea>
                            </div>*@
                        }
                    }

                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger" data-dismiss="modal">Đóng</button>
                <button type="button" class="btn btn-primary px-3" onclick="SaveEditContactInfo(@Model.KeyID);">Lưu</button>
            </div>
        </div>
    </div>
</div>
